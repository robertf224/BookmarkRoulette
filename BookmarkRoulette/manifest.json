{
	"manifest_version": 2,

	"name": "Bookmark Roulette",
	"description": "An extension to force you to start actually reading your monumental catalog of bookmarks",
	"version": "1.1",

  "permissions": [
    "bookmarks",
    "activeTab"
  ],

  "background": {
    "scripts": ["roulette.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": {                    
      "19": "icons/icon19.png",          
      "38": "icons/icon38.png"           
    },
    "default_title": "Bookmark Roulette"    
  },

  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
  
}